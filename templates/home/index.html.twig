{% extends('base.html.twig') %}
{% block body %}
    <div class="container">
        <div class="row">
            {% for post in posts %}
                <div class="col-sm-4">
                    <h3><a href="{{ path('post.show', {id: post.id})}}"> {{post.title}} </a></h3>
                    <p>{{post.description | length > 50 ? post.description|slice(0, 50) ~ '...' : post.description}}</p>
                </div>
            {% endfor %}            
        </div>
    </div>
{% endblock %}