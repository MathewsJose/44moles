{% extends('base.html.twig') %}
{% block body %}
    <h2>Posts</h2>    
    <table class="table table-striped">
        <thead>
            <tr>
                <td>ID</td>
                <td>Title</td>
                <td>Description</td>
            </tr>
        </thead>
        <tbody>
        {% if posts is defined %}
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                    <td><a href="{{ path('post.show', {id: post.id})}}">show</a></td>
                </tr>
            {% endfor %}
        {% endif %}
        </tbody>
    </table>
{% endblock %}